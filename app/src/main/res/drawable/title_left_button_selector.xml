<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--普通状态-->
    <item>
        <shape>
            <solid android:color="#00ffffff"/>

            <stroke
                android:width="0dp"
                android:color="#00ffffff"/>
            <corners
                android:topRightRadius="@dimen/button_radius_little"
                android:bottomLeftRadius="@dimen/button_radius_little"
                android:topLeftRadius="@dimen/button_radius_little"
                android:bottomRightRadius="@dimen/button_radius_little"
                />

            <size
                android:height="40dp"
                android:width="40dp"
                />

            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>
