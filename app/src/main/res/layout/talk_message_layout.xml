<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d7d5d5">

    <com.cuit.talk.control.TalkTitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.cuit.talk.control.TalkTitleLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_talk_message_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">
        <EditText
            android:id="@+id/talk_message_layout_editText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_control_style"
            android:minLines="1"
            android:minHeight="30dp"
            android:maxLines="5"/>
        <Button
            android:id="@+id/talk_message_layout_button"
            android:layout_width="50dp"
            android:layout_gravity="right|bottom"
            android:layout_height="30dp"
            android:text="发送"
            android:layout_marginLeft="4dp"
            android:textColor="#fff"
            android:textSize="14sp"
            android:background="#13A6F0" />
    </LinearLayout>


</LinearLayout>