<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/colorTitle">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/title_text"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="添加"/>
        <Button
            android:id="@+id/add_friend_title_return_btn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#00ffffff"
            android:textSize="@dimen/title_text"
            android:textColor="#ffffff"
            android:text="返回"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_text_height"
        android:background="@drawable/input_linear_selector">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/title_text"
            android:gravity="center"
            android:textColor="@color/colorTitle"
            android:text="找人"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_text_height"
        android:background="@drawable/input_linear_selector">
        <EditText
            android:id="@+id/add_friend_query_person_ev"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="16dp"
            android:hint="输入qq号"
            />

    </LinearLayout>

    <Button
        android:id="@+id/add_friend_query_person_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/title_text"
        android:textColor="#ffffff"
        android:text="查找"
        android:background="@drawable/round_button_blue_style_selector"/>

</LinearLayout>